// profile for the Gadi supercomputer at NCI
// More info: https://opus.nci.org.au/display/DAE/Nextflow


// Preset use of containers with Singularity
singularity {
    enabled = true
    cacheDir = "/scratch/er01/cl9310/singularity"
    autoMounts = true
    autoCleanUp = true
}

process {
    module = 'singularity'
    cache = 'lenient'
    stageInMode = 'symlink'
    project = 'er01'
    storage = "scratch/er01+gdata/er01"
    
    withName: 'checkInputs' {
	executor = 'local'
}
    withName: 'fastqc' {
	executor  = 'pbspro'
    queue     = 'normal'
    cpus      = 1
	memory    = 4.GB
    time      = '1h'
  }

withName: 'multiqc' {
	executor  = 'pbspro'
    queue     = 'normal'
    cpus      = 1
	memory    = 4.GB
    time      = '1h'
}}

